FROM node:20-alpine

WORKDIR /app

COPY frontend/package.json frontend/package-lock.json ./
RUN npm ci

COPY frontend/src ./src
COPY frontend/next.config.js frontend/tsconfig.json frontend/tailwind.config.ts frontend/postcss.config.js frontend/next-env.d.ts ./

EXPOSE 3000

CMD ["npx", "next", "dev", "--hostname", "0.0.0.0"]
